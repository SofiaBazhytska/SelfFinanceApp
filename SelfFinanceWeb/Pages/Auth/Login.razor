@page "/login"
@layout EmptyLayout
@using Microsoft.AspNetCore.Components.Authorization
@using SelfFinance.Shared.Dtos.UserDtos
@using SelfFinanceWeb.Layout
@using SelfFinanceWeb.Authentication
@inject HttpClient Http
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<h3>Login</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="loginModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Username:</label>
        <InputText @bind-Value="loginModel.UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Password:</label>
        <InputText @bind-Value="loginModel.Password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    private UserDto loginModel = new UserDto();
    private string errorMessage;

    private async Task HandleValidSubmit()
    {
        errorMessage = null;


        var response = await Http.PostAsJsonAsync("api/auth/login", loginModel);

        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<LoginResponseDto>();
            var token = result.Token;

            await ((CustomAuthStateProvider)AuthStateProvider).MarkUserAsAuthenticated(token);
            Navigation.NavigateTo("/");
        }
        else
        {
            errorMessage = "Login failed. Please check your credentials.";
        }
    }
}
