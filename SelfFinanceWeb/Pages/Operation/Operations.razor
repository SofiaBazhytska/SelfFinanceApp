@page "/Operations"
@using SelfFinance.Shared.Dtos.OperationDtos;
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Operations</h3>

@if (operations == null)
{
    <p><em>Loading...</em></p>
}
else if (!operations.Any())
{
    <p>No operations found.</p>
}
else
{
    <button class="btn btn-success mb-3" @onclick="GoToAddOperation">
        <i class="bi bi-plus-circle me-1"></i> Add Operation
    </button>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Type</th>
                <th>Details</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var op in operations)
            {
                <tr>
                    <td>@op.Date.ToShortDateString()</td>
                    <td>@op.Amount</td>
                    <td>@op.CategoryName</td>
                    <td>@op.TypeName</td>
                    <td>
                        <button class="btn btn-sm btn-info" @onclick="() => ViewOperation(op.Id)">Details</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<DisplayOperationDto> operations;

    protected override async Task OnInitializedAsync()
    {
        operations = await Http.GetFromJsonAsync<List<DisplayOperationDto>>("api/operations");
    }

    private void ViewOperation(int id)
    {
        Navigation.NavigateTo($"/OperationDetails/{id}");
    }

    private void GoToAddOperation()
    {
        Navigation.NavigateTo("/AddOperation");
    }

}
