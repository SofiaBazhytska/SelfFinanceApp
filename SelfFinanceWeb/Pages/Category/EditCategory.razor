@page "/EditCategory/{Id:int}"
@using SelfFinance.Shared.Dtos.CategoryDtos
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Edit Category</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (category == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="category" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Name:</label>
            <InputText @bind-Value="category.Name" class="form-control" />
        </div>

        <div class="mb-3 form-check">
            <InputCheckbox @bind-Value="category.IsIncome" class="form-check-input" id="isIncomeCheckbox" />
            <label class="form-check-label" for="isIncomeCheckbox">Is Income</label>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private UpdateCategoryDto category;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            category = await Http.GetFromJsonAsync<UpdateCategoryDto>($"api/categories/{Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading category: {ex.Message}";
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/categories/{Id}", category);
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo("/Categories");
            }
            else
            {
                errorMessage = "Update failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating category: {ex.Message}";
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/Categories");
    }
}
